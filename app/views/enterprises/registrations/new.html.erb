  <%= devise_error_messages! %>
  <div class ="form-control">
    <div class="field">
      <%= f.label :rut, "Rut" %><br/ >
      <%=f.text_field :rut,autofocus:true%>
    </div>

    <div class="field">
      <%= f.label :nombre, "Nombre" %><br/ >
      <%=f.text_field :nombre%>
    </div>

    <div class="field">
    <%= f.label :imagen, "Imagen"%>
    <%=  f.label :imagen do %>
    <%= f.file_field :imagen %>
    <%= f.hidden_field :imagen_cache%>
    <%end%>
    </div>
    <div class="field">
      <%= f.label :descripcion, "Ingrese la descripcion de su empresa" %><br/ >
      <%=f.text_field :descripcion%>
    </div>
    <div class="field">
      <%= f.label :telefono, "Telefono" %><br/ >
      <%=f.text_field :telefono%>
    </div>
    <div class="form-field form-group responsive_select">
      <%=f.label :Provincia%><br/>
      <%=f.select :provincia,regiones, class: "form-control" %>
    <div>
        <%= f.label :Fecha_de_inicio%><br />
        <%= f.date_select :fecha_de_inicio,:order => [:day, :month, :year],:use_month_names => [t(:en), t(:feb), t(:mar), t(:apr), t(:may), t(:jun), t(:jul), t(:aug), t(:sep), t(:oct), t(:nov), t(:dec)], :start_year => 1900, class: "form-control"%>

    </div>

    <div class="form-field form-group responsive_select">
    <div class="input-container">
    <%=f.label :Categoria%>
    <option value="">Selecciona una categoría</option>

    <%= f.select :category_id,Category.all.collect {|f| [ "#{f.nombre}","#{f.area}",f.id ] }  %>
    </div>
    </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> Caracteres como minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :Confirmar_contraseña%><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>
</div>
</div>

 
