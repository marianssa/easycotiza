<p id="notice"><%= notice %></p>

<h1 style="color: red;text-align: center"><strong>Mis calificaciones</strong></h1>
<div class = "container-fluid">
<div class = "form-control">
<table>
  <thead>
    <tr>

      <th>Nota</th>
      <th>Cliente que a calificado </th>
      <th>Comentario</th>
      <th>Su respuesta </th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @calificaciones.each do |calificacion| %>
      <tr>
    
        <td><%= calificacion.nota %></td>
        <td><%client=Client.where(id: calificacion.client_id).pluck(:nombre, :apellido)%>
          <%=client[0]*" "%>
        </td>
        <td ><textarea rows="3" cols="20" readonly><%= calificacion.comentario%> </textarea></td>
        <td><textarea rows="3" cols="50" readonly><%respuesta = Answer.where(id: calificacion.answer_id).pluck(:answer_cotiza)%> 
        <%=respuesta * " "%></textarea></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="wrapper" style="text-align: center">
<%= link_to "  Volver  ", profesionales_path, class: "buttoncute" %>
</div>
</div>