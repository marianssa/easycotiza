 <div class="top_cont_inner" >
      <div class="container-fluid">
      <div class="top_content">
        <div class="row" >
        <div class="col-xs-2">
        <div style="text-align: right;">
            <%=image_tag("trabajador.png", width: 90, heigth:90)%>
            </div>
        </div>
        <div class="col-xs-2 col-xs-2">
        <div class="top_left_cont flipInY wow animated" style="padding-top: 0px">
        <div style="text-align: center;">
              <h3 style="text-align: center;">Cotiza ahora!</h3>
            
              <p><%=link_to "Cotizar", new_client_cotizacion_path(current_client.id), class: "buttonsombra"%></p>
         </div>
        </div>
    </div>

        
        <div class="col-lg-5 col-xs-6">
        <div class="top_left_cont flipInY wow animated" style="padding-top: 0px">
        <h3 style="text-align: center;"> Cotizaciones sin respuesta </h3>
        <div class ="form-control">
        <table>
            <thead>
                <tr>
                    <th>Descripcion</th>
                    <th>Categoria</th>
                    <th>Subida el </th>
                    <th colspan="3"></th>
                </tr>
            </thead>

        <tbody>
    
            <%@cotizacions.each do |cotizacion|%>
                <%if (Answer.exists? id: cotizacion.id) %>
           
                <tr>
                    <td><%=cotizacion.descripcion%></td>
                    <td><% categoria=Category.where(id: cotizacion.category_id).pluck(:nombre)%>
                        <%=categoria[0]%> </td>
                    <td><%=cotizacion.created_at.strftime("%d/%b/%Y")%></td>
                
                </tr>
            <%end%>
        <%end%>
        </tbody>
        </table>
        </div>
        </div>
        </div>

