<div class="container">
<div class="wrapper">
<%= form_for payment do |f| %>

  <div class="form-control">

    <h2> Darse de alta </h2>
    <br>
    <h4> Proceso de verificación pago </h4>
    <br>
    <h5> Conjunte imagen de pago </h5>
    
    <div class="field">
      <%= f.label :identifier, "Ingrese número de tarjeta" %>
      <%= f.text_field :identifier %>
    </div>
    <div class ="field" id="plan">
    <%plan=params[:plan_id]%>
    <%=f.text_field :plan_id, value: params[:plan_id]%>
    <% if plan ==1%>
        <%=f.text_field :precio, value: 5500%>
        <%=f.text_field :meses, value: 2%>

    <%elsif plan==2%>
        <%=f.text_field :precio, value: 15000%>
        <%=f.text_field :meses, value: 6%>
     <%elsif plan==3%>
        <%=f.text_field :precio, value: 25000%>
        <%=f.text_field :meses, value: 12%>
  <%end%>
  </div>
    <div class="field">
      <%= f.label :imagen, "Imagen"%>
      <%= f.label :imagen do %>
        <%= f.file_field :imagen %>
        <%= f.hidden_field :imagen_cache%>
      <%end%>
    </div>

    <div class="actions">
        <%= f.submit %>
      </div>
<% end %>
  	<h2> Si aún no realiza su transacción </h2>
  	<h2> dirijase a una de las siguientes opciones </h2>
   <br>
  	<div class="field">
  	  <h4> Metodos de pago </h4>
  	  <h5> Cuenta Rut/ Master Card Nacional </h5>
      <%= link_to image_tag("bancoestado.png",:width => 100, :height => 100),"https://www.bancoestado.cl/imagenes/comun2008/nuevo_paglg_pers2.html" %>
  	</div>
  	<div class="field">
  	  <h4> Redcompra </h4>
      <%= link_to image_tag("redcompra.png",:width => 100, :height => 100),"https://www.transbank.cl/public/" %>
  	</div>
  	</div>
  	<div class="field">
  	  <h4> Visa </h4>
      <%= link_to image_tag("visa.png",:width => 100, :height => 100),"https://www.visa.cl/pague-con-visa/visa-checkout.html#2" %>
  	</div>
  </div>
</div>
</div>
<script type="text/javascript">
$("#plan").hide();
</script>